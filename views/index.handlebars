<ul>
    {{#each burgers}}
        {{#unless devoured}}
        {{> burger/burger-block devoured=1}}
        {{/unless}}
    {{/each}}
</ul>

<ul>
    {{#each burgers}}
        {{#if devoured}}
        {{> burger/burger-block devoured=0}}
        {{/if}}
    {{/each}}
</ul>

<form class="create-form">

    <div class="form-group">
        <label for="newBurger">Burger:</label>
        <input type="text" id="newBurger" name="burger_name">
    </div>

    <button type="submit">Add Burger</button>
</form>